<%= form_for(@comment, :remote=>true) do |f| %>
  <div class="field">
    <%= f.text_area :body, :placeholder=> "Post your comment...", :id=> "comment_content", :required=>true, :class=>"form-control",:rows=>"4" %>
  </div>
  <%= f.hidden_field :article_id, :value=> @article.id %>
  </br>
  <div class="actions">
    <%= f.submit(:class=>"btn btn-success") %>
  </div>
<% end %>